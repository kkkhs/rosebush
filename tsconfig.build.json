  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "Node", // 路径查找
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true
